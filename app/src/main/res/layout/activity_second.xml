<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/backgroundgradient">

    <Button
        android:id="@+id/btnSafeStreetMap"
        android:layout_width="274dp"
        android:layout_height="125dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_map"
        android:text="SafeStreetMap"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <Button
        android:id="@+id/btnRouteMaker"
        android:layout_width="272dp"
        android:layout_height="112dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_directions"
        android:text="RouteMaker"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/btnForum"
        android:layout_width="264dp"
        android:layout_height="120dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_forum"
        android:text="Forum"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="274dp"
        android:layout_height="112dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_settings"
        android:text="Settings"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/tvInfo1"
        android:layout_width="380dp"
        android:layout_height="65dp"
        android:text="Welcome to SafeStreets App"
        app:layout_constraintBottom_toTopOf="@+id/btnSafeStreetMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>